<% if(error_msg!=''){%>
  <div class="alert alert-dismissible alert-danger col-lg-4 mx-auto">
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>

    <%= error_msg %>
  </div>

  <% } %>

    <% if(success_msg&&success_msg!='') {%>
      <div class="alert alert-dismissible alert-success col-lg-4 mx-auto">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>Success</strong>
        <%= success_msg %>
      </div>
      <% } %>