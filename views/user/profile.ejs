<form action="/user/profile" method="POST">
  <fieldset>
    <legend>Add Profile</legend>
    <div class="form-group row">
      <div class="form-group">
        <label for="firstName" class="col-sm-2 col-form-label">First Name</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="firstName" name="firstName" value="<%=(typeof inputData!='undefined')? inputData.firstName:''%>">
        </div>
      </div>
    </div>
    <div class="form-group row">
      <div class="form-group">
        <label for="lastName" class="col-sm-2 col-form-label">Last Name</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="lastName" name="lastName" value="<%=(typeof inputData!='undefined')? inputData.lastName:''%>">
        </div>
      </div>
    </div>
    <div class="form-group row">
      <div class="form-group">
        <label for="about" class="form-label mt-4">About Me</label>
        <textarea class="form-control" id="about" name="about" rows="3" spellcheck="false" data-ms-editor="true"><%=(typeof inputData!='undefined')? inputData.about:''%></textarea>
      </div>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </fieldset>
</form>