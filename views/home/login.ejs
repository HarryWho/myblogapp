<div class="px-4 py-1 my-4 text-center">
  <img class="d-block mx-auto mb-4 bg-secondary rounded-circle" src="https://uilogos.co/img/logomark/u-mark.png" alt="" width="auto" height="100">
  <h3 class="display-6 fw-bold">Login Here</h3>
  <div class="col-lg-3 mx-auto">
    <form action="/login" method="POST">
      <div class="mb-2">
        <label for="username" class="form-label">Username</label>
        <input type="text" class="form-control" name="username" placeholder="Username" required>
      </div>
      <div class="mb-2">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" name="password" placeholder="Password" required>
      </div>
      <button type="submit" class="btn btn-primary mt-2">Submit</button>
      <a href="/register" class="text-success btn">Register</a>
    </form>
  </div>
</div>